pipeline {
    agent any
    environment {
        // Define Docker Hub credentials
        DOCKER_HUB_CREDENTIALS = credentials('nahla-id')
        IMAGE_NAME = 'nahhla0220/nginx'
    }

    stages {
        stage('Login ) {
            steps {
              
                 sh "echo \$DOCKER_HUB_CREDENTIALS_PSW | docker login -u \$DOCKER_HUB_CREDENTIALS_USR --password-stdin"
                    
                }
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'node:alpine'
                }
            }
            steps {
                sh '''
                    echo "With docker"
                    echo "Nahla" > nahla.txt
                    node --version
                '''
                stash name: 'myname-file', includes: 'nahla.txt'
            }
        }

        stage('Deploy Nginx Alpine Container') {
            steps {
                sh 'docker pull nginx:alpine'
                sh '''
                    docker run -d \
                    --name my-nginx-alpine \
                    -p 6000:80 \
                    nginx:alpine
                '''
            }
        }
    }

    post {
        always {
            unstash 'myname-file'
            sh '''
                docker stop my-nginx-alpine
                docker rm my-nginx-alpine 
                cat nahla.txt
            '''
        }
    }
}
